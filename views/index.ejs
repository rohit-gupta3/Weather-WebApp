<%- include("./partials/header") %>

<body>
    <div class="container">
        <h1>Weather App</h1>
        <div class="search-box">
            <form action="/" method="POST">
                <input type="text" name="cityName" id="city" placeholder="Enter city">
        
                <input type="submit" id="button"> 
            </form>
        </div>
        <div class="weather-info">
            <h2 id="cityName">City Name: <%= city %> </h2>
            <div class="weather-details">
                <p id="temperature">Temperature: <%= temperature %></p>
                <p id="weatherCondition">Weather Condition: <%= description %></p>
            </div>
        </div>
    </div>
    
</body>
</html>